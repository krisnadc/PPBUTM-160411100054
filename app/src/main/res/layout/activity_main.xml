<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/androidcoffe" />

        <TextView
            android:id="@+id/judul"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="125dp"
            android:gravity="center"
            android:text="Nama Pemesan"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/pemesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:gravity="center"
            android:layout_below="@id/judul"
            />

        <TextView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pemesan"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:text="Menu Coffe :"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sajian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pemesan"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/menu"
            android:text="Sajian :"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pemesan"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/sajian"
            android:text="Jumlah :"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/Arabica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu"
            android:text="Arabica"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>

        <CheckBox
            android:id="@+id/Robusta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Arabica"
            android:text="Robusta"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>

        <CheckBox
            android:id="@+id/American"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Robusta"
            android:text="American"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>

        <RadioGroup
            android:id="@+id/pilih1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sajian"
            android:layout_toRightOf="@id/Arabica"
            android:layout_marginTop="15dp">

            <RadioButton
                android:id="@+id/panas1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panas"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="-33dp"
                />

            <RadioButton
                android:id="@+id/dingin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Dingin" />



        </RadioGroup>


        <RadioGroup
            android:id="@+id/pilih2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pilih1"
            android:layout_toRightOf="@+id/Robusta"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="15dp">

            <RadioButton
                android:id="@+id/panas2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panas"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="-33dp"
                />

            <RadioButton
                android:id="@+id/dingin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dingin"
                android:layout_marginLeft="100dp"/>
        </RadioGroup>


        <RadioGroup
            android:id="@+id/pilih3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pilih2"
            android:layout_toRightOf="@id/American"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="-12dp">
            <RadioButton
                android:id="@+id/panas3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panas"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="-33dp"
                />

            <RadioButton
                android:id="@+id/dingin3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dingin"
                android:layout_marginLeft="100dp"/>
        </RadioGroup>



        <EditText
            android:id="@+id/jumlah1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jumlah"
            android:layout_toRightOf="@id/pilih1"
            android:text=""
            android:layout_marginLeft="30dp"
            android:inputType="number"/>

        <EditText
            android:id="@+id/jumlah2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jumlah1"
            android:layout_toRightOf="@id/pilih2"
            android:text=""
            android:layout_marginLeft="30dp"
            android:inputType="number"/>

        <EditText
            android:id="@+id/jumlah3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jumlah2"
            android:layout_toRightOf="@id/pilih3"
            android:text=""
            android:layout_marginLeft="30dp"
            android:inputType="number"/>

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/American"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Total"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/total"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="Bayar"
            android:textSize="15dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/kembalian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bayar"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Kembalian"
            android:textSize="15dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/total2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pilih3"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:text=""/>

        <EditText
            android:id="@+id/bayar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/total2"
            android:layout_toRightOf="@id/bayar"
            android:layout_marginLeft="80dp"
            android:text=""
            android:inputType="number"/>

        <TextView
            android:id="@+id/kembalian2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bayar2"
            android:layout_toRightOf="@id/kembalian"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="53dp"
            android:text=""/>

        <Button
            android:id="@+id/cek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kembalian2"
            android:layout_marginTop="15dp"
            android:layout_marginRight="-95dp"
            android:layout_toLeftOf="@+id/tombol"
            android:background="@android:color/holo_red_dark"
            android:onClick="cek"
            android:text="CEK"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tombol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kembalian2"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/holo_green_light"
            android:onClick="tombol"
            android:text="BAYAR"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>